<body>
    <script>
        var num = 0;
        var suma = 0;
        while (num != -1) {

            num = parseInt(prompt("write a number: "));
            
            if (isNaN(num)) {
                alert("is not a number");
            } else {
                suma = num + suma;
            }
        }
        suma += 1;
        alert(suma);
    </script>
</body>
</html>
