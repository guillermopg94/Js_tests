    <script>
        window.onload = function () {

            /* 9.- Create a program that asks you a password. If the password is "daw", show an alert with the message 
            "Hello DAW pupil" and the system's time. If the password is wrong, show the message "Access denied".
             */

            var pass = prompt("password: ").toLocaleLowerCase();

            while (pass != "daw") {
                alert("Acces denied");
                var pass = prompt("password: ").toLocaleLowerCase();
            }

            alert("Hello DAW pupil");

        }
    </script>
